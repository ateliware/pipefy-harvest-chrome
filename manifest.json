{
  "manifest_version": 2,

  "name": "Pipefy Extension for Harvest",
  "short_name": "Pipefy Extension for Harvest",
  "description": "Extension to track time from Pipefy in Harvest.",
  "version": "1.3",

  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [ "*://app.pipefy.com/*" ],
      "js": [ "pipefy.js" ],
      "run_at": "document_start"
    }
  ]
}
